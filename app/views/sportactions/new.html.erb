

<div class="wrapper">

  <div class="container container-boxes">
        <div class="row">
          <div class="col-xs-12 col-md-6 left-form-container">
            <h2> Add an Activity </h2>

            <div class="row">
              <div class="col-md-12">
                <%= simple_form_for @sportaction do |f| %>
                <%= f.input :datum, as: :date , label: 'Datum' %>
              </div>
              <div class="col-md-6 col-xs-12">
                <%= f.input :sport, as: :select, collection: @sports %>
              </div>

              <div class="col-md-6 col-xs-12">
                <%= f.input :employee, label: 'Employee?',as: :select, collection: @employees %>
              </div>

              <div class="col-md-6 col-xs-12">

                  <%= f.button :submit, :class => "btn btn-gradient" %>
                 <% end %>
              </div>

            </div>
          </div>


      </div>

  </div>
</div>
