<% departments = ['Business Intelligence','HR', 'Marketing'] %>

<div class="wrapper">

  <div class="container container-boxes">
        <div class="row">
          <div class="col-xs-12 col-md-6 left-form-container">
            <h2> Create an Employee </h2>

            <div class="row">
              <div class="col-md-12">
                <%= simple_form_for @employee do |f| %>
                <%= f.input :employeename, label: 'Name' %>
              </div>
              <div class="col-md-6 col-xs-12">
                <%= f.input :department, as: :select, collection: departments %>
              </div>


              <div class="col-md-6 col-xs-12">

                  <%= f.button :submit, :class => "btn btn-gradient" %>

              </div>
              <% end %>
            </div>
          </div>


      </div>

  </div>
</div>
